@using System.Diagnostics.CodeAnalysis;

@*CSS*@
<style>
    .chatCol-1 {
        width: 8%;
    }

    .chatImage {
        width: 100%;
        height: 100%;
        min-width: 30px;
        min-height: 30px;
        margin: 0 auto;
        padding: 0;
    }
</style>

@*HTML*@
<div class="column chatCol-1 align-self-center">
    <img class="chatImage" src=@UserImagePath />
</div>

@code {
    [Parameter, AllowNull] public string UserImagePath { get; set; }
}
